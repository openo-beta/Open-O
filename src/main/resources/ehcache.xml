
<ehcache>

	<diskStore path="java.io.tmpdir" />

	<defaultCache maxElementsInMemory="100" eternal="false"
		timeToIdleSeconds="120" timeToLiveSeconds="120" overflowToDisk="true"
		diskPersistent="false" diskExpiryThreadIntervalSeconds="120" />

	<cache name="org.oscarehr.PMmodule.model.AccessType"
		maxElementsInMemory="100" eternal="true" overflowToDisk="false" />

    <!--https://github.com/ehcache/ehcache2/blob/main/ehcache-core/src/test/resources/ehcache-2.xml-->
    <cache name="OscarRxCache_specialInstructions"
           maxElementsInMemory="250"
           eternal="false"
           timeToLiveSeconds="86400"
           overflowToDisk="true"
           diskPersistent="false"
           diskExpiryThreadIntervalSeconds="864000"
           memoryStoreEvictionPolicy="LFU"/>

</ehcache>

