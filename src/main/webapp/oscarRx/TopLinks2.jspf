<%@ page import="java.io.StringWriter" %>
<%@ page import="com.fasterxml.jackson.databind.ObjectMapper" %>
<%@ page import="com.fasterxml.jackson.databind.SerializationFeature" %>
<%@ page import="org.apache.commons.lang.StringEscapeUtils" %>
<%@ page import="net.sf.json.JSONObject" %>
<%@ page import="ca.openosp.openo.commn.model.PharmacyInfo" %>
<%@ page import="ca.openosp.openo.prescript.data.*,
    ca.openosp.openo.demographic.data.DemographicData,
    ca.openosp.OscarProperties,
    ca.openosp.openo.log.*" %>
<%@ taglib uri="/WEB-INF/oscar-tag.tld" prefix="oscar" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>

<jsp:include page="/images/spinner.jsp" flush="true"/>

<script type="text/javascript">
function newWindow(url) {
    var newwin = window.open(url, 'name', 'height=700,width=1000');
    if (window.focus) { newwin.focus(); }
    return false;
}
</script>

<tr>
  <td width="20%" height="37" bgcolor="#000000">
    <span class="ScreenTitle">oscarRx</span>
  </td>
  <td width="100%" valign="bottom" bgcolor="#000000"
      style="border-left: 2px solid #A9A9A9; padding-left: 5px" height="0%" colspan="2">
    <table width="100%" border="0" height="100%">
      <tr>
        <td valign="bottom" style="color:white;">
          <%
            RxPatientData.Patient patient2 =
              (RxPatientData.Patient) request.getSession().getAttribute("Patient");
          %>
          <b><fmt:setBundle basename="oscarResources"/><fmt:message key="SearchDrug.nameText"/></b>
          <%= patient2.getFirstName() %> <%= patient2.getSurname() %>
          <b><fmt:setBundle basename="oscarResources"/><fmt:message key="SearchDrug.ageText"/></b>
          <%= patient2.getAge() %><br>

          <b>Selected Pharmacy:</b>
          <select id="Calcs" name="pharmacyId"
                  onchange="populatePharmacy(this.value); showpic('Layer1');">
            <%
              if (pharmacyList != null) {
                  ObjectMapper mapper = new ObjectMapper();
                  // if you need dates or other features, you can configure here:
                  // mapper.configure(SerializationFeature.WRITE_DATES_AS_TIMESTAMPS, false);
                  for (PharmacyInfo pi : pharmacyList) {
                      StringWriter sw = new StringWriter();
                      mapper.writeValue(sw, pi);
                      // escape single-quotes for safe attribute usage
                      String json = sw.toString().replace("'", "");
            %>
              <option value='<%= json %>'>
                <%= pi.getName() %> (<%= pi.getAddress() %>, <%= pi.getCity() %>, Fax: <%= pi.getFax() %>)
              </option>
            <%
                  }
              }
            %>
          </select>
          &nbsp;<b>
            <a style="color:white;" href="oscarRx/SelectPharmacy2.jsp"
               onclick="ShowSpin(true); return true;">
              (Edit List)
            </a>
          </b>
        </td>
        <td valign="top" align="right">
        </td>
      </tr>
    </table>
  </td>
</tr>
