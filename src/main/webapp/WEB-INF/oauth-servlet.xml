<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Scan OAuth MVC packages -->
    <context:component-scan base-package="org.oscarehr.ws.oauth">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Component"/>
    </context:component-scan>

    <!-- Explicit bean registrations for OAuth1 utilities -->
    <bean id="oauth1ParamParser" class="org.oscarehr.ws.oauth.util.OAuth1ParamParser"/>
    <bean id="oauth1SignatureVerifier" class="org.oscarehr.ws.oauth.util.OAuth1SignatureVerifier"/>

    <!-- View resolver for any MVC responses (probably JSON/XML only) -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

</beans>
