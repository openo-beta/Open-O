# ~/.bashrc: executed by bash(1) for non-login shells.

# Default Ubuntu bashrc content
[ -z "$PS1" ] && return
HISTCONTROL=ignoredups:ignorespace
shopt -s histappend
HISTSIZE=1000
HISTFILESIZE=2000
shopt -s checkwinsize
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

if [ -z "${debian_chroot:-}" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
unset color_prompt

case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h: \w\a\]$PS1"
    ;;
esac

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

# Short welcome banner
echo ""
echo "========================================="
echo "  OpenO EMR Development Environment"
echo "========================================="
echo "  Type 'help-dev' for commands reference"
echo "  Type 'make help' for build options"
echo "========================================="
echo ""

# Aliases for common tasks
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# EMR-specific aliases
alias build='mvn clean compile'
alias test-build='mvn test'
alias package-war='mvn package'
alias db-connect='mysql -h db -u root -ppassword oscar'
alias logs-tomcat='tail -f /usr/local/tomcat/logs/catalina.out'
alias claude-help='cat CLAUDE.md | head -50'

# Documentation server aliases
alias docs='docs-status'
alias docs-logs='tail -f /tmp/docusaurus.log'

# Development help command - uses script for better compatibility
# The help-dev script is available in /scripts/help-dev

# Logging level control
alias debug-on='export LOGGING_LEVEL=DEBUG && echo "üîç Logging set to DEBUG level"'
alias debug-off='export LOGGING_LEVEL=INFO && echo "‚ÑπÔ∏è  Logging set to INFO level"'

# Set environment for better development experience
export EDITOR=nano
export JAVA_HOME=/opt/java/openjdk
export MAVEN_OPTS="-Xmx1G -Xms512m"

# Add workspace and Go bin to PATH for custom scripts and Go tools
export PATH="/workspace/scripts:/root/go/bin:$PATH"